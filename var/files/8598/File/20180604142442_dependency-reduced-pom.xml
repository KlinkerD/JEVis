<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>JEVisCore</artifactId>
    <groupId>org.jevis</groupId>
    <version>3.4</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jevis.jeviscc</groupId>
  <artifactId>JEVisContolCenter</artifactId>
  <name>JEVisControlCenter</name>
  <version>3.1.0</version>
  <organization>
    <name>Envidatec GmbH</name>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <compilerArguments>
            <bootclasspath>${sun.boot.class.path}${path.separator}${java.home}/lib/jfxrt.jar</bootclasspath>
          </compilerArguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Permissions>all-permissions</Permissions>
              <JavaFX-Version>8.0</JavaFX-Version>
              <url>${project.parent.url}</url>
            </manifestEntries>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
          <arguments>
            <argument />
          </arguments>
          <systemProperties>
            <systemProperty>
              <key>myproperty</key>
              <value>myvalue</value>
            </systemProperty>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
            </transformer>
          </transformers>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.zenjava</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>8.6.0</version>
        <executions>
          <execution>
            <id>create-jfxjar</id>
            <phase>package</phase>
            <goals>
              <goal>build-jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
          <verbose>true</verbose>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>webstart-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>${skipjnlp}</phase>
            <goals>
              <goal>jnlp</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <skip>true</skip>
          <excludeTransitive>false</excludeTransitive>
          <dependencies />
          <jnlp>
            <outputFile>jeviscc.jnlp</outputFile>
            <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
          </jnlp>
          <sign>
            <keystore>${project.parent.basedir}/etc/keystore.jks</keystore>
            <keypass>${key.password}</keypass>
            <storepass>${store.password}</storepass>
            <alias>jevis</alias>
            <keystoreConfig>
              <delete>false</delete>
              <gen>false</gen>
            </keystoreConfig>
          </sign>
          <pack200>
            <enabled>false</enabled>
          </pack200>
          <gzip>true</gzip>
          <outputJarVersions>true</outputJarVersions>
          <verbose>true</verbose>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <mainClass>org.jevis.jeconfig.JEConfig</mainClass>
    <skipjnlp>none</skipjnlp>
    <additionalparam>-Xdoclint:none</additionalparam>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
